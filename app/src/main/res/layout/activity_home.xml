<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff5ee"
    android:layout_height="match_parent">
   <!-- tools:context=".Home">-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:textSize="24dp"
        android:background="@drawable/btn_back"
        android:textColor="#fff"
        android:padding="7dp"
        android:text="ENTER BOOKING DETAILS"/>

 
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="130dp"
       android:text="Name: "
       android:textSize="23dp"
       android:textColor="#000"
       android:layout_marginLeft="25dp"
       android:id="@+id/nameT"/>
    <EditText
        android:id="@+id/etTxt"
        android:layout_toRightOf="@+id/nameT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="#000"
        android:layout_marginTop="120dp"
        android:textSize="23dp"
        android:hint="Enter your name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="25dp"
        android:textSize="23dp"
        android:textColor="#000"

        android:text="Choose a location"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginRight="20dp"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:id="@+id/sp1"
        android:textSize="23dp"

        android:entries="@array/location_name"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="#000"
         android:layout_marginTop="320dp"
         android:textSize="23dp"
         android:layout_marginRight="20dp"
         android:layout_marginLeft="25dp"
         android:text="Choose a room"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:textColor="#000"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="25dp"
        android:id="@+id/sp2"
        android:textSize="23dp"

        android:entries="@array/room_array"
        android:prompt="@string/room_no_prompt"/>
    <!--<CalendarView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="280dp"-->
        <!--android:layout_marginLeft="25dp">-->
    <!--</CalendarView>-->
 <Button
     android:id="@+id/from"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="25dp"
     android:padding="5dp"
     android:background="@drawable/btn_back"
     android:layout_marginTop="420dp"
     android:textColor="#fff"
     android:text="Click to set start date" />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/from"
     android:id="@+id/et_from"
     android:textColor="#000"
     android:textSize="23dp"
     android:layout_marginTop="420dp"
     />
 <Button
     android:id="@+id/to"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginLeft="25dp"
     android:layout_marginTop="500dp"
     android:textColor="#fff"
     android:padding="5dp"
     android:background="@drawable/btn_back"
     android:text="Click to set end date" />
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/to"
     android:layout_marginTop="500dp"
     android:id="@+id/et_to"
     android:textColor="#000"
     android:textSize="23dp"
     />

 <Button
     android:id="@+id/button1"
     android:layout_width="200dp"
     android:layout_height="65dp"
     android:layout_marginLeft="100dp"
     android:layout_marginTop="570dp"
     android:textColor="#fff"
     android:background="@drawable/btn_back"
     android:text="Check Info" />



</RelativeLayout>